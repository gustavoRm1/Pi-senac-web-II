@model Contatos;

@{
    ViewData["Title"] = "Fazer reclamação";
}


<div class="text-center separacao">
<h1>@ViewData["Title"]</h1>
</div>

<form  method="POST">
<div class="mb-3">
<label>Nome</label>
<input asp-for="nome" required class="form-control" type="text" placeholder="Nome Completo" >
</div>

<div class="mb-3">
<label>Número</label>
<input asp-for="numero" required class="form-control" type="text" placeholder="(00) 0 0000-0000" >
</div>

<div class="mb-3">
  <label>Email</label>
  <input asp-for="email" required type="email" class="form-control" placeholder="name@example.com">
</div>

<div class="mb-3">
  <label>Mensagem</label>
  <textarea asp-for="msg" required class="form-control"  rows="3"></textarea>
</div>

 <div class="col-auto">
    <button type="submit" class="btn btn-success btn-block">Fazer reclamação</button>
    
    <p>@ViewBag.Mensagem</p>
    <button class="btn btn-secondary btn-block" asp-controller="Home" asp-action="Index">Voltar</button>
  </div>
</form>



<style>
  
        .separacao{
        color: white;
       background-color: black;
       filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
        border-radius: 10px;
        width: 100%;
        height: 100%;
        
      }</style>

